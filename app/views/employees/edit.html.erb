<div class="page_title">
  <span class="title">Employee</span>
  <span class="subtitle">Edit Employee</span>
</div>
<%= link_to "<< back to Employee", employees_path %>

  <%# binding.pry %>


<div class="jumbotron">
<%= form_for :employee, url:employee_path(@employee),method: :patch do |f| %>
    <!-- Check for Errors -->
    <% if @employee.errors.any? %>
      <div id="Error_explanation">
        <h2><%= pluralize(@employee.errors.count, "error") %>
          prohibited from being saved
        </h2>
        <ul>
          <% @employee.errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
            </ul>
          <% end %>
          </div>
    <% end %>
  <%= f.label :First_Name %><br />
  <%= f.text_field(:first_name) %><br />

  <%= f.label :Last_Name %><br />
  <%= f.text_field(:last_name) %><br />

    <%= f.label :Email %><br />
    <%= f.email_field(:email_address) %><br />

  <%= f.label :CID_No %><br />
  <%= f.text_field(:cid_no) %><br />

    <div class="field">
      <%= f.label :Date_of_joining %><br />
      <%= f.date_field :date_of_joining, autofocus: true,autocomplete: "Last name" %>
    </div>

  <%= f.label :Department %><br />
    <%=select("employee", "department_id", Department.all.collect { |p| [ p.dep_name, p.id ] }, { include_blank: 'Select' }) %><br/>


  <%= f.label :Designation %><br />
    <%=select("employee", "designation_id", Designation.all.collect { |p| [ p.deg_name, p.id ] }, { include_blank: 'Select' }) %><br />

  <%= f.submit "Edit", class:"btn btn-primary btn-sm" %>
<%end %>
</div>